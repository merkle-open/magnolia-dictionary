<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>magnolia-dictionary</name>
    <displayName>Dictionary</displayName>
    <description>Dictionary app for label translations.</description>
    <class>com.merkle.oss.magnolia.dictionary.DictionaryModule</class>
    <versionHandler>com.merkle.oss.magnolia.dictionary.setup.DictionaryModuleVersionHandler</versionHandler>
    <version>${project.version}</version>

    <components>
        <id>main</id>
        <component>
            <type>info.magnolia.i18nsystem.TranslationService</type>
            <implementation>com.merkle.oss.magnolia.dictionary.i18nsystem.DictionaryTranslationServiceImpl</implementation>
            <scope>singleton</scope>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.dictionary.i18nsystem.DictionaryMessageBundlesLoader</type>
            <implementation>com.merkle.oss.magnolia.dictionary.i18nsystem.DictionaryMessageBundlesLoader</implementation>
            <scope>singleton</scope>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.dictionary.i18nsystem.I18nResourcesProvider</type>
            <implementation>com.merkle.oss.magnolia.dictionary.i18nsystem.DefaultI18nResourcesProvider</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.dictionary.services.XlsExportService</type>
            <implementation>com.merkle.oss.magnolia.dictionary.services.XlsExportService</implementation>
            <scope>singleton</scope>
            <lazy>false</lazy>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.dictionary.services.XlsImportService</type>
            <implementation>com.merkle.oss.magnolia.dictionary.services.XlsImportService</implementation>
            <scope>singleton</scope>
            <lazy>false</lazy>
        </component>
    </components>

    <dependencies>
        <dependency>
            <name>i18n</name>
            <version>*/*</version>
        </dependency>
        <dependency>
            <name>site</name>
            <version>*</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <name>multisite</name>
            <version>*</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    
    <repositories>
        <repository>
            <name>magnolia</name>
            <workspaces>
                <workspace>dictionary</workspace>
            </workspaces>
            <nodeTypeFile>/mgnl-nodetypes/magnolia-dictionary-nodetypes.xml</nodeTypeFile>
        </repository>
    </repositories>
</module>